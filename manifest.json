{
	"manifest_version": 2,
	
	"name": "Page and Extension Refresh",
	"version": "1.0",

	"permissions": [
		"tabs", "storage", "http://*/*"
	],

	"content_scripts": [
		{
			"matches": ["*://*/*", "file:///*"],
			"js": ["content.js"]
		}
	],

	"browser_action": {
		// "default_icon": {
		// 	"19": "images/icon19.png",
		// 	"38": "images/icon38.png"
		// },
		"default_popup": "popup.html"
	},

	"options_page": "options.html"

	// "icons": {
